{
  "mcpServers": {
    "dolibarr-projects": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "--name", "mcp-dolibarr-projects",
        "-e", "DOLIBARR_URL",
        "-e", "DOLIBARR_API_KEY",
        "dolibarr-projects-mcp-server:latest"
      ],
      "env": {
        "DOLIBARR_URL": "${DOLIBARR_URL:-http://localhost/dolibarr}",
        "DOLIBARR_API_KEY": "${DOLIBARR_API_KEY}"
      }
    },
    "dolibarr-tasks": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "--name", "mcp-dolibarr-tasks",
        "-e", "DOLIBARR_URL",
        "-e", "DOLIBARR_API_KEY",
        "dolibarr-tasks-mcp-server:latest"
      ],
      "env": {
        "DOLIBARR_URL": "${DOLIBARR_URL:-http://localhost/dolibarr}",
        "DOLIBARR_API_KEY": "${DOLIBARR_API_KEY}"
      }
    }
  }
}
